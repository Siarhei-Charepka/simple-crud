<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <servlet>
        <servlet-name>GetAllServlet</servlet-name>
        <servlet-class>GetAllServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>GetAllServlet</servlet-name>
        <url-pattern>/get-all</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>GetByIdServlet</servlet-name>
        <servlet-class>GetByIdServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>GetByIdServlet</servlet-name>
        <url-pattern>/get-by-id</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>CreateItemServlet</servlet-name>
        <servlet-class>CreateItemServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CreateItemServlet</servlet-name>
        <url-pattern>/create-item</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>DeleteByIdServlet</servlet-name>
        <servlet-class>DeleteByIdServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DeleteByIdServlet</servlet-name>
        <url-pattern>/delete-item</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>UpdateByIdServlet</servlet-name>
        <servlet-class>UpdateByIdServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UpdateByIdServlet</servlet-name>
        <url-pattern>/put-item</url-pattern>
    </servlet-mapping>
</web-app>